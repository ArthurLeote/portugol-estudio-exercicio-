programa {
  funcao inicio() {
    
inteiro salario, conta1, conta2, restSalario, multa 

escreva("Equivale a quanto o salário de João: ")
leia(salario)

escreva("Sua primeira conta é de: ")
leia(conta1)

escreva("Sua segunda conta em débito é de: ")
